.cn-en-title-wrapper {
  text-align: center;
}

.cn-en-title-wrapper .en-text {
  font-size: 72rpx;
  font-weight: 900;
  color: var(--themeColor);
  opacity: 0.3;
}

.cn-en-title-wrapper .cn-title {
  font-size: 54rpx;
  font-weight: 900;
  transform: translateY(-40rpx);
  color: var(--themeColor);
}

.cn-en-title-wrapper .line {
  display: inline-block;
  width: 100rpx;
  height: 6rpx;
  background-color: var(--themeColor);
  opacity: 0.7;
  transform: translateY(-40rpx);
}
