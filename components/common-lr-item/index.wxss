.common-lr-item-wrapper {
  display: flex;
  justify-content: space-between;
}

.common-lr-item-wrapper .l-item-pic {
  width: 220rpx;
  height: 150rpx;
}

.common-lr-item-wrapper .l-item-pic .l-item-img {
  width: 100%;
  height: 100%;
}

.common-lr-item-wrapper .r-item-wrapper {
  max-width: 440rpx;
  height: 200rpx;
  text-align: justify;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.common-lr-item-wrapper .r-item-wrapper .item-title {
  line-height: 1.4em;
  color: var(--globalColor);
  font-size: 32rpx;
  margin-bottom: 12rpx;
}

.common-lr-item-wrapper .r-item-wrapper .item-info-wrapper {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
}

.common-lr-item-wrapper .r-item-wrapper .item-info-wrapper .vanicon {
  color: var(--descColor);
  margin-right: 6rpx;
}
