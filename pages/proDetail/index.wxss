/* pages/proDeetail/index.wxss */
.pro-detail-wrapper .pic-wrapper {
  width: 750rpx;
  height: 620rpx;
}

.pro-detail-wrapper .pic-wrapper image {
  width: 100%;
  height: 100%;
}

.pro-detail-wrapper .detail-pro-content-wrapper {
  padding: 80rpx 30rpx;
}

.pro-detail-wrapper .detail-pro-content-wrapper .detail-pro-title {
  padding-bottom: 50rpx;
  font-size: 50rpx;
  color: #333;
}

.pro-detail-wrapper .detail-pro-content-wrapper .detail-desc-wrapper {
  border-top: 1rpx solid #dedede;
  margin-top: 50rpx;
  padding-top: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.pro-detail-wrapper .detail-pro-content-wrapper .detail-desc-wrapper .name {
  font-size: 34rpx;
  color: #888;
}

.pro-detail-wrapper .detail-pro-content-wrapper .detail-desc-wrapper .value {
  font-size: 38rpx;
  color: #666;
  padding-left: 30rpx;
}

.pro-detail-wrapper .detail-pro-content-wrapper .detail-desc-wrapper:first-child {
  border-top: none;
}
