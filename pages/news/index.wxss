/* pages/news/index.wxss */
.news-wrapper {
  padding: 50rpx 30rpx;
  background-color: var(--globalBgColor2);
}

.news-wrapper .brand-content .item-wrapper {
  border-bottom: dashed 1rpx var(--themeColor);
  padding: 20rpx 0;
}

.news-wrapper .brand-content .item-wrapper:first-child {
  padding-top: 0rpx;
}

.news-wrapper .brand-content .item-wrapper:last-child {
  border-bottom: none;
}

.news-wrapper .loading-wrapper {
  text-align: center;
}

.news-wrapper .total-wrapper {
  text-align: center;
  color: var(--subColor);
  font-size: 32rpx;
}
